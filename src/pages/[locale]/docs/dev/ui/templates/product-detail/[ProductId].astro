---
import Layout from "@/layouts/Layout.astro";
import TemplateProductDetails from "@/components/templates/TemplateProductDetails";
import { useLocalizePage } from "@/i18n/utils";
import { isLanguageSupported } from "@/i18n/ui";
import AppShell from "@/layouts/AppShell.astro";

export const prerender = false;

const { locale, ProductId: productId } = Astro.params;

if (!locale || !isLanguageSupported(locale as any)) {
  console.log(`Locale not supported: ${locale}`);
}

const { t } = useLocalizePage(Astro);
---


<Layout title="Detalle del producto">
  <AppShell>
    <TemplateProductDetails productId={String(productId)} client:load />
  </AppShell>
</Layout>
