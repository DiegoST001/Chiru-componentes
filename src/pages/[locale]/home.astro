---
import Layout from "@/layouts/Layout.astro";
import { getStaticLanguagePaths } from "@/i18n/utils";
import { TemplateHome } from "@/components/templates/TemplateHome";
import AppShell from "@/layouts/AppShell.astro";

export async function getStaticPaths() {
  return getStaticLanguagePaths();
}
---

<Layout title="Home" description="Vista principal con AppShell" lang="es">
  <!-- Hydrate AppShell so AuthProvider + children are a single client island -->
  <AppShell client:load>
    <!-- ðŸ‘‡ Todo el contenido de Home se oculta mientras se escribe en el buscador -->
    <div class="hide-when-search">
      <TemplateHome client:load />
    </div>
  </AppShell>
</Layout>
